{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2023",
    "module": "Node16",
    "moduleResolution": "node16",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
